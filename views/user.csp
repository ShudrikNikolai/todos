<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Мой профиль</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
        }
        .user-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            background: #f9f9f9;
        }
        .user-info {
            margin-bottom: 15px;
        }
        .user-info label {
            font-weight: bold;
            color: #555;
        }
        .user-info div {
            margin-bottom: 10px;
            padding: 8px;
            background: white;
            border-radius: 4px;
            border: 1px solid #eee;
        }
        .nav-links {
            margin-top: 20px;
            text-align: center;
        }
        .nav-links a {
            margin: 0 10px;
            color: #007bff;
            text-decoration: none;
        }
        .nav-links a:hover {
            text-decoration: underline;
        }
        button {
            padding: 10px 20px;
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-top: 10px;
        }
        button:hover {
            background: #c82333;
        }
    </style>
</head>
<body>
    <h1>Мой профиль</h1>
    
    <div class="user-card">
        <h2>Данные пользователя</h2>
        
        <div class="user-info">
            <label>ID:</label>
            <div id="userId">Загрузка...</div>
        </div>
        
        <div class="user-info">
            <label>Имя:</label>
            <div id="userFirstName">Загрузка...</div>
        </div>
        
        <div class="user-info">
            <label>Фамилия:</label>
            <div id="userLastName">Загрузка...</div>
        </div>
        
        <div class="user-info">
            <label>Email:</label>
            <div id="userEmail">Загрузка...</div>
        </div>
        
        <div class="user-info">
            <label>Дата регистрации:</label>
            <div id="userCreatedAt">Загрузка...</div>
        </div>
        
        <button onclick="logout()">Выйти</button>
    </div>

    <div class="nav-links">
        <a href="todos.html">Мои дела</a>
        <a href="login.html">Вход</a>
        <a href="register.html">Регистрация</a>
    </div>

    <script>
        // Загрузка данных пользователя при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            loadUserData();
        });

        // Загрузка данных пользователя
        function loadUserData() {
            fetch('/api/user/profile')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Ошибка загрузки данных');
                    }
                    return response.json();
                })
                .then(user => {
                    displayUserData(user);
                })
                .catch(error => {
                    console.error('Ошибка:', error);
                    alert('Ошибка загрузки данных пользователя');
                    window.location.href = 'login.html';
                });
        }

        // Отображение данных пользователя
        function displayUserData(user) {
            document.getElementById('userId').textContent = user.id || 'Не указано';
            document.getElementById('userFirstName').textContent = user.firstName || 'Не указано';
            document.getElementById('userLastName').textContent = user.lastName || 'Не указано';
            document.getElementById('userEmail').textContent = user.email || 'Не указано';
            document.getElementById('userCreatedAt').textContent = user.createdAt || 'Не указано';
        }

        // Выход из системы
        function logout() {
            fetch('/auth/logout', {
                method: 'POST'
            })
            .then(response => {
                console.log('Выход выполнен');
                window.location.href = 'login.html';
            })
            .catch(error => {
                console.error('Ошибка выхода:', error);
                window.location.href = 'login.html';
            });
        }
    </script>
</body>
</html>